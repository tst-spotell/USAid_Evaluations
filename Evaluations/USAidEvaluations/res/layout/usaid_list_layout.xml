<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/usaid_results_background" >
    
    <!-- date -->
    <TextView
        style="@style/usaid_medium_text.white"
        android:id="@+id/usaid_publish_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4sp" />
    
    <!-- imageview -->
    <ImageView
        android:id="@+id/usaid_data_image_type"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="4dp"
        android:layout_below="@id/usaid_publish_date"
        android:contentDescription="@string/usaid_image" />
    
    <TextView
        style="@style/usaid_medium_text"
        android:id="@+id/usaid_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/usaid_publish_date"
        android:layout_toRightOf="@id/usaid_data_image_type"
        android:maxLines="1"
        android:layout_marginLeft="4sp" />
    
    <TextView
        android:id="@+id/usaid_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/usaid_title"
        android:layout_alignLeft="@id/usaid_title"
        android:layout_marginLeft="4sp"
        android:maxLines="2" />
    
    
</RelativeLayout>